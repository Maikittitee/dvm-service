# Application settings
APP_NAME=DVM Service
APP_VERSION=1.0.0
DEBUG=false

# API settings
API_PORT=8000
API_PREFIX=/api/v1

# Serial port configuration
# Linux: /dev/ttyUSB0
# macOS: /dev/cu.usbserial-XXXXX
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=57600
SERIAL_TIMEOUT=0.1

# VMC configuration
VMC_POLL_INTERVAL=0.2
VMC_COMMAND_TIMEOUT=1.0
VMC_MAX_RETRIES=5
